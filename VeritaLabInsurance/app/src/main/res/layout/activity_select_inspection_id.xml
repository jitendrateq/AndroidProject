<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teqforce.veritalabinsurance.selectInspectionId">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/grdnt"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewAccountDetails"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_weight="0.00"
            android:text="Check Previous Inspection ID"
            android:textAlignment="center"

            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/white"
            android:background="#009a9a"
            tools:gravity="center_vertical"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="30dp"
            />
        <TextView
            android:id="@+id/line"
            style="?android:attr/listSeparatorTextViewStyle"
            android:paddingTop="5dip"
            android:gravity="center_horizontal"
            android:layout_below="@+id/connect_help"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/txtprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Inspection ID"
                android:textColor="@android:color/white"
                android:textSize="20dp"

                android:textStyle="bold" />
            <Spinner
                android:id="@+id/inspid_spinner"
                android:layout_height="wrap_content"
                android:layout_width="222dp"
                android:backgroundTint="@android:color/white"
                android:layout_toRightOf="@+id/txtprofile"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="30dp"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="Back"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:background="#009a9a"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="260dp"
        android:layout_alignParentBottom="true"
        android:text="Proceed"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="#009a9a"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"/>
</RelativeLayout>
