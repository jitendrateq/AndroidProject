<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teqforce.veritalabinsurance.VideoInstructionsSteps">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e8e8e7"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewAccountDetails"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:text="Instructions on taking Video"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/holo_green_dark"
            tools:gravity="center_vertical"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="30dp"
            tools:textStyle="bold" />
        <TextView
            android:id="@+id/line"
            style="?android:attr/listSeparatorTextViewStyle"
            android:paddingTop="5dip"
            android:gravity="center_horizontal"
            android:layout_below="@+id/connect_help"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />

        <TextView
            android:id="@+id/textViewStep"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.00"
            android:text="STEPS"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/background_dark"
            tools:textStyle="bold" />
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:text="•"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp"
                    tools:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textViewClickPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_column="2"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="top"
                    android:text="Place phone in landscape position (check photo)"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    tools:textStyle="bold"
                    android:text="•"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="top"
                    android:textColor="@android:color/background_dark"
                    android:text="Open car bonnet"
                    android:textSize="18sp"></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    tools:textStyle="bold"
                    android:text="•"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="top"
                    android:layout_height="60dp"
                    android:textColor="@android:color/background_dark"
                    android:text="Identify area where engine/chassis no is written"
                    android:textSize="18sp"></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    tools:textStyle="bold"
                    android:text="•"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="15dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:textColor="@android:color/background_dark"
                    android:text="Wipe it with piece of cloth to ensure that it is readable visually by human eye"
                    android:textSize="18sp"></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    tools:textStyle="bold"
                    android:text="•"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="15dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top"
                    android:textColor="@android:color/background_dark"
                    android:text="Start video by focusing on engine/chassis no (keep the phone still for 5 sec)"
                    android:textSize="18sp"></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    tools:textStyle="bold"
                    android:text="•"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="top"
                    android:textColor="@android:color/background_dark"
                    android:text="Slowly move back and close the bonnet"
                    android:textSize="18sp"></TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_column="1"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    tools:textStyle="bold"
                    android:text="•"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_column="2"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="top"
                    android:textColor="@android:color/background_dark"
                    android:text="Move 360 degrees to take video of entire car"
                    android:textSize="18sp"></TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="Back"
        android:background="@android:color/transparent"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="right|center_vertical"
        android:text="Proceed"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />
</RelativeLayout>
