<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teqforce.veritalabinsurance.NewUserLiveCallSupport">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/grdnt"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewAccountDetails"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.00"
            android:text="Live Call Support"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/white"
            android:background="#009a9a"
            tools:gravity="center_vertical"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="30dp"
            tools:textStyle="normal" />
        <TextView
            android:id="@+id/line"
            style="?android:attr/listSeparatorTextViewStyle"
            android:paddingTop="5dip"
            android:gravity="center_horizontal"
            android:layout_below="@+id/connect_help"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000" />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_column="2"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="top"
                    android:text="Please call on 965843629 to speak to our customer service representative"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"></TextView>
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/btnCall"
            android:background="#009a9a"
            android:text="Call"
            android:textColor="#d9e5f3"
            android:textSize="18dp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:letterSpacing="0.2"
            android:layout_gravity="center_horizontal"
            android:layout_width="270dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="Back"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:background="#009a9a"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:text="Proceed"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="#009a9a"
        android:textSize="18sp" />
</RelativeLayout>
