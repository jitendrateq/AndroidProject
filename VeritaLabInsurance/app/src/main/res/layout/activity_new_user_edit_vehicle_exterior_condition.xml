<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teqforce.veritalabinsurance.NewUserEditVehicleExteriorCondition">
    <LinearLayout
        android:id="@+id/lnnerlayt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/grdnt"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewRegType"
            android:layout_width="match_parent"
            android:background="#009a9a"

            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_weight="0.02"
            android:fontFamily="sans-serif"
            android:text="Edit Vehicle External Condition"
            android:textAlignment="center"
            tools:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/white"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="30dp"
            tools:textStyle="normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnReadInstructions"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:background="#009a9a"
                android:gravity="center"
                android:letterSpacing="0.2"
                android:padding="16dp"
                android:text="Read Instructions"
                android:textColor="#d9e5f3"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSampleVideo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="50dp"
                android:background="#009a9a"
                android:letterSpacing="0.2"
                android:padding="16dp"
                android:text="Sample Video"
                android:textColor="#d9e5f3"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLiveCallSupport"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="50dp"
                android:background="#009a9a"
                android:letterSpacing="0.2"
                android:padding="16dp"
                android:text="Live Call Support"
                android:textColor="#d9e5f3"
                android:textSize="12sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <VideoView
                    android:id="@+id/imageViewYes"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="0.00"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="225dp"
                    app:srcCompat="@android:color/background_dark" />
                <Button
                    android:id="@+id/btnTakeNewvideo"
                    android:background="#009a9a"
                    android:text="Take New video"
                    android:textColor="#d9e5f3"
                    android:textSize="16dp"
                    android:layout_marginLeft="200dp"
                    android:padding="16dp"
                    android:layout_marginTop="225dp"
                    android:layout_marginBottom="50dp"
                    android:letterSpacing="0.2"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="Back"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:background="#009a9a"
        android:textSize="16sp" />
    <Button
        android:id="@+id/btn_Submit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="260dp"
        android:layout_alignParentBottom="true"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="#009a9a"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"/>
</RelativeLayout>
