<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context="com.example.teqforce.veritalabinsurance.NewUserVehicleInteriorCondition">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/grdnt"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textViewAccountDetails"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_weight="0.00"
            android:text="Vehicle Interior Condition"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/white"
            android:background="#009a9a"
            tools:gravity="center_vertical"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="30dp"
            />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <Button
                android:id="@+id/btnOdometer"
                android:background="#009a9a"
                android:text="Odometer"
                android:textColor="#d9e5f3"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="18dp"
                android:letterSpacing="0.2"
                android:layout_gravity="center_horizontal"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/imageButton_Odometer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="300dp"
                android:layout_toRightOf="@+id/edittxtreqno"
                android:src="@drawable/u3" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/txtOdometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="italic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="120dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="-15dp">

            <Button
                android:id="@+id/btnFront"
                android:background="#009a9a"
                android:text="Front"
                android:textColor="#d9e5f3"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="50dp"
                android:letterSpacing="0.2"
                android:layout_gravity="center_horizontal"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/imageButton_Front"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="300dp"
                android:layout_toRightOf="@+id/edittxtreqno"
                android:src="@drawable/u3" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_gravity="top"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="80dp"
                android:text="Open front door and take one photo showing both left and right side."
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/txtFront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="italic" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="100dp"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnBack"
                android:background="#009a9a"
                android:text="Back"
                android:textColor="#d9e5f3"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="50dp"
                android:letterSpacing="0.2"
                android:layout_gravity="center_horizontal"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/imageButton_Back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="300dp"
                android:layout_toRightOf="@+id/edittxtreqno"
                android:src="@drawable/u3" />

            <TextView
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_column="1"
                android:layout_gravity="top"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="60dp"
                android:text="Open back door and take one photo showing both left and right side."
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <TextView
                android:id="@+id/txtBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="italic" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="#fff"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="Back"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/white"
        android:background="#009a9a"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="260dp"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:text="Proceed"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="#009a9a"
        android:textSize="16sp" />
</RelativeLayout>
